{% extends 'base.html.twig' %}

{% block title %}Monuments{% endblock %}

{% block stylesheets %}
    <style>
        .blog-item {
            display: flex;
            flex-direction: row;
            align-items: stretch;
            width: 50%;
        }
        .blog-img {
            flex: 1;
            width: 50%;
            position: relative;
        }
        .blog-content {
            flex: 2;
            display: flex;
            flex-direction: column;
            justify-content: center;
            width: 50%;
        }
        .image-wrapper {
            position: relative;
            width: 100%;
            height: 100%;
        }
        .image-wrapper::after {
            content: 'wonderwise';
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%) rotate(-30deg);
            font-size: 2em;
            color: rgba(0, 0, 0, 0.5);
            white-space: nowrap;
            pointer-events: none;
            font-family: Arial, sans-serif;
            text-transform: uppercase;
            font-weight: bold;
        }
    </style>
{% endblock %}

{% block body %}
    <!-- Monuments Start -->
    <div class="container-fluid blog py-5">
        <div class="container py-5">
            <div class="mx-auto text-center mb-5" style="max-width: 900px;">
                <h5 class="section-title px-3">Monuments</h5>
                <h1 class="mb-4">Explore Our Monuments</h1>
                <p class="mb-0">Discover the beauty and history of monuments around the world. From ancient structures to modern marvels, there's something for everyone to explore.</p>
            </div>
            <div class="d-flex justify-content-end mb-3">
                <a href="{{ path('app_monument_new1') }}" class="btn btn-primary">Create new Monument</a>
            </div>
            <div class="row g-4 justify-content-center">
                {% for monument in monuments %}
                    <div class="col-md-12 d-flex">
                        <div class="blog-item hover-card w-100">
                            <div class="blog-img">
                                <div class="image-wrapper">
                                    <img class="img-fluid w-100 rounded-top" src="{{ monument.img }}" alt="{{ monument.name }}" style="height: 200px; object-fit: cover;">
                                </div>
                                <div class="blog-icon">
                                    <a href="{{ path('app_monument_show', {'id': monument.id}) }}" class="my-auto">
                                        <i class="fas fa-link fa-2x text-white"></i>
                                    </a>
                                    <a href="{{ path('app_monument_edit', {'id': monument.id}) }}" class="btn btn-secondary rounded-pill py-2 px-4">Update</a>
                                    <form method="post" action="{{ path('app_monument_delete', {'id': monument.id}) }}" class="d-inline">
                                      <a>  <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ monument.id) }}">
                                        <button class="btn btn-secondary rounded-pill py-2 px-4">Delete</button> </a>
                                    </form>
                                </div>
                            </div>
                            <div class="blog-content border border-top-0 rounded-bottom p-4">
                                <p class="mb-3">Monument: {{ monument.name }}</p>
                                <a href="{{ path('app_monument_show', {'id': monument.id}) }}" class="h4">{{ monument.name }}</a>
                                <p class="my-3">Explore the unique history and architecture of {{ monument.name }}.</p>
                                <a href="{{ path('app_monument_show', {'id': monument.id}) }}" class="btn btn-primary rounded-pill py-2 px-4">View Details</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
    <!-- Monuments End -->
{% endblock %}