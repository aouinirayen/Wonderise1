{% extends 'base.html.twig' %}

{% block title %}Monuments{% endblock %}

{% block body %}
<div class="container py-5">
    <h1>Monuments</h1>
    <a href="{{ path('app_monument_new') }}" class="btn btn-primary mb-3">Create new Monument</a>
    <ul>
        {% for monument in monuments %}
            <li>
                <a href="{{ path('app_monument_show', {'id': monument.id}) }}">{{ monument.name }}</a>
            </li>
        {% endfor %}
    </ul>
</div>
{% endblock %}