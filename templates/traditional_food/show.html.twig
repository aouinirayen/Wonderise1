{% extends 'base.html.twig' %}

{% block title %}{{ traditional_food.name }} - Traditional Food Details{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h1 class="card-title mb-0">{{ traditional_food.name }}</h1>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    {% if traditional_food.img %}
                        <img class="img-fluid w-100 rounded-top" src="{{ asset('uploads/images/' ~ traditional_food.img) }}" alt="{{ traditional_food.name }}" style="height: 200px; object-fit: cover;">
                    {% else %}
                        <div class="alert alert-warning text-center">
                            <p class="mb-0">No image available</p>
                        </div>
                    {% endif %}
                </div>
                <div class="col-md-6">
                    <p class="lead">{{ traditional_food.description }}</p>
                    <div class="mt-4">
                        <h2 class="h4 text-secondary">Recipe</h2>
                        <p class="text-muted">{{ traditional_food.recipe }}</p>
                    </div>
                    <div class="mt-4">
                        <h2 class="h4 text-secondary">Country</h2>
                        <p class="text-muted">{{ traditional_food.country.name }}</p>
                    </div>
                    <div class="mt-4">
                        <h2 class="h4 text-secondary">Recipe QR Code</h2>
                        <div class="text-center">
                            {% if qr_code %}
                                <img src="{{ qr_code }}" alt="QR Code for {{ traditional_food.name }} recipe">
                            {% else %}
                                <div class="alert alert-warning">
                                    QR Code generation failed
                                </div>
                            {% endif %}
                            <p class="mt-2">
                                <a href="{{ recipe_url }}" target="_blank" class="btn btn-primary">
                                    <i class="fas fa-external-link-alt"></i> View Recipe Online
                                </a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer bg-light">
          
        </div>
    </div>
</div>
{% endblock %}