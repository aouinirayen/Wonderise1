{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
<div class="container py-5">
    <h1>{{ title }}</h1>
    {{ form_start(form) }}
    <table class="table">
        <tbody>
            {% for field in form %}
                <tr>
                    <th>{{ form_label(field) }}</th>
                    <td>{{ form_widget(field) }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <button class="btn btn-primary">{{ title }}</button>
    {{ form_end(form) }}
</div>
{% endblock %}