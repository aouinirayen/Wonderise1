{% extends 'layout.html.twig' %}

{% block title %}{{ traditional_food.name }} - Traditional Food Details{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h1 class="card-title mb-0">{{ traditional_food.name }}</h1>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    {% if traditional_food.img %}
                        <img src="{{ traditional_food.img }}" alt="{{ traditional_food.name }}" class="img-fluid rounded">
                    {% else %}
                        <div class="alert alert-warning text-center">
                            <p class="mb-0">No image available</p>
                        </div>
                    {% endif %}
                </div>
                <div class="col-md-6">
                    <p class="lead">{{ traditional_food.description }}</p>
                    <div class="mt-4">
                        <h2 class="h4 text-secondary">Recipe</h2>
                        <p class="text-muted">{{ traditional_food.recipe }}</p>
                    </div>
                    <div class="mt-4">
                        <h2 class="h4 text-secondary">Country</h2>
                        <p class="text-muted">{{ traditional_food.country.name }}</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer bg-light">
            <div class="d-flex justify-content-between align-items-center">
                <a href="{{ path('app_traditional_food_edit1', {'id': traditional_food.id}) }}" class="btn btn-primary btn-lg">
                    <i class="fas fa-edit"></i> Edit
                </a>
                <form method="post" action="{{ path('app_traditional_food_delete1', {'id': traditional_food.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ traditional_food.id) }}">
                    <button class="btn btn-danger btn-lg">
                        <i class="fas fa-trash"></i> Delete
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}