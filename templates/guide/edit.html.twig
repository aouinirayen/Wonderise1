{% extends 'base.html.twig' %}

{% block title %}Modifier le Guide{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .edit-form-container {
            max-width: 600px;
            margin: 0 auto;
            padding: 2rem;
            background: white;
            border-radius: 15px;
            box-shadow: 0 2px 15px rgba(0,0,0,0.1);
        }
        .form-group {
            margin-bottom: 1.5rem;
        }
        .input-icon {
            position: relative;
        }
        .input-icon i {
            position: absolute;
            left: 1rem;
            top: 50%;
            transform: translateY(-50%);
            color: #6c757d;
        }
        .form-control {
            padding-left: 2.5rem;
        }
        .photo-preview {
            width: 150px;
            height: 150px;
            border-radius: 50%;
            margin: 1rem auto;
            overflow: hidden;
            background-color: #f8f9fa;
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
        }
        .photo-container {
            width: 100%;
            height: 100%;
            position: relative;
        }
        .photo-preview img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            display: block;
        }
        .photo-preview .fallback-icon {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            font-size: 3rem;
            color: #ccc;
            opacity: 0;
            transition: opacity 0.3s ease-in-out;
        }
        .photo-preview img:not([src]):not([srcset]) + .fallback-icon,
        .photo-preview img[src=""] + .fallback-icon,
        .photo-preview img[srcset=""] + .fallback-icon {
            opacity: 1;
        }
        .custom-file {
            text-align: center;
            margin-top: 1rem;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container py-5">
        <div class="edit-form-container">
            <h1 class="h3 mb-4 text-center">Modifier le Guide</h1>

            {{ form_start(form) }}
                <div class="photo-preview">
                    {% if guide.photo %}
                        <div class="photo-container">
                            <img src="{{ asset('uploads/photos/' ~ guide.photo) }}" 
                                 alt="Photo actuelle">
                            <i class="fas fa-user fallback-icon"></i>
                        </div>
                    {% else %}
                        <i class="fas fa-user fallback-icon"></i>
                    {% endif %}
                </div>

                <div class="form-group">
                    {{ form_label(form.photo, 'Photo de profil') }}
                    {{ form_widget(form.photo, {
                        'attr': {
                            'class': 'form-control'
                        }
                    }) }}
                    <small class="form-text text-muted">
                        Formats acceptés : JPG, PNG. Taille maximale : 2MB
                    </small>
                </div>

                <div class="form-group">
                    <div class="input-icon">
                        <i class="fas fa-user"></i>
                        {{ form_row(form.nom, {
                            'label': 'Nom',
                            'attr': {
                                'class': 'form-control',
                                'placeholder': 'Entrez le nom'
                            }
                        }) }}
                    </div>
                </div>

                <div class="form-group">
                    <div class="input-icon">
                        <i class="fas fa-user"></i>
                        {{ form_row(form.prenom, {
                            'label': 'Prénom',
                            'attr': {
                                'class': 'form-control',
                                'placeholder': 'Entrez le prénom'
                            }
                        }) }}
                    </div>
                </div>

                <div class="form-group">
                    <div class="input-icon">
                        <i class="fas fa-envelope"></i>
                        {{ form_row(form.email, {
                            'label': 'Email',
                            'attr': {
                                'class': 'form-control',
                                'placeholder': 'exemple@email.com'
                            }
                        }) }}
                    </div>
                </div>

                <div class="form-group">
                    <div class="input-icon">
                        <i class="fas fa-phone"></i>
                        {{ form_row(form.numTelephone, {
                            'label': 'Numéro de Téléphone',
                            'attr': {
                                'class': 'form-control',
                                'placeholder': '+216 XX XXX XXX'
                            }
                        }) }}
                    </div>
                </div>

                <div class="d-flex justify-content-between">
                    <a href="{{ path('app_guide_index') }}" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Retour
                    </a>
                    <button class="btn btn-primary">
                        <i class="fas fa-save me-2"></i>Enregistrer
                    </button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
