{% extends 'base.html.twig' %}

{% block title %}Commentaire index{% endblock %}

{% block body %}
    <div class="container">
        <h1>Commentaire index</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Contenu</th>
                    <th>DateCreation</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for commentaire in commentaires %}
                <tr>
                    <td>{{ commentaire.id }}</td>
                    <td>{{ commentaire.contenu }}</td>
                    <td>{{ commentaire.dateCreation ? commentaire.dateCreation|date('Y-m-d H:i:s') : '' }}</td>
                    <td>
                        <a href="{{ path('app_back_office') }}" class="btn btn-secondary">Back to Back Office</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
