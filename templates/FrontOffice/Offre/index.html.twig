    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const searchInput = document.getElementById('searchInput');
            const offersGrid = document.getElementById('offersGrid');
            let timeout = null;

            searchInput.addEventListener('input', function(e) {
                clearTimeout(timeout);
                timeout = setTimeout(() => {
                    const query = e.target.value;
                    
                    fetch(`/offre/search-ajax?q=${encodeURIComponent(query)}`)
                        .then(response => response.json())
                        .then(data => {
                            offersGrid.innerHTML = data.html;
                            initRatings(); // Réinitialiser les ratings après le chargement AJAX
                        })
                        .catch(error => {
                            console.error('Erreur lors de la recherche:', error);
                        });
                }, 300);
            });

            // Système de rating
            function initRatings() {
                const ratings = document.querySelectorAll('.rating');
                
                ratings.forEach(rating => {
                    const stars = rating.querySelectorAll('.rating-star');
                    const ratingValue = rating.querySelector('.rating-value');
                    const offerId = rating.dataset.offerId;
                    let userRating = 0;
                    let rated = false;

                    // Effet de survol
                    stars.forEach(star => {
                        star.addEventListener('mouseover', () => {
                            if (!rated) {
                                const current = parseInt(star.dataset.rating);
                                stars.forEach(s => {
                                    if (parseInt(s.dataset.rating) <= current) {
                                        s.classList.remove('far');
                                        s.classList.add('fas');
                                    } else {
                                        s.classList.remove('fas');
                                        s.classList.add('far');
                                    }
                                });
                            }
                        });

                        star.addEventListener('mouseout', () => {
                            if (!rated) {
                                stars.forEach(s => {
                                    if (parseInt(s.dataset.rating) <= userRating) {
                                        s.classList.remove('far');
                                        s.classList.add('fas');
                                    } else {
                                        s.classList.remove('fas');
                                        s.classList.add('far');
                                    }
                                });
                            }
                        });

                        // Clic pour noter
                        star.addEventListener('click', () => {
                            rated = true;
                            userRating = parseInt(star.dataset.rating);
                            
                            // Envoyer le rating au serveur
                            fetch(`/offre/${offerId}/rate`, {
                                method: 'POST',
                                headers: {
                                    'Content-Type': 'application/x-www-form-urlencoded',
                                },
                                body: `rating=${userRating}`
                            })
                            .then(response => response.json())
                            .then(data => {
                                if (data.success) {
                                    ratingValue.textContent = `(${userRating})`;
                                    stars.forEach(s => {
                                        if (parseInt(s.dataset.rating) <= userRating) {
                                            s.classList.remove('far');
                                            s.classList.add('fas');
                                        } else {
                                            s.classList.remove('fas');
                                            s.classList.add('far');
                                        }
                                    });
                                }
                            })
                            .catch(error => console.error('Erreur:', error));
                        });
                    });
                });
            }

            // Initialiser les ratings au chargement
            initRatings();
        });
    </script>
