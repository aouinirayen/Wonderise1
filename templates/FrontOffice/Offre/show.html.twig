{% extends 'FrontOffice/base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
        .offer-container {
            max-width: 1200px;
            margin: 2rem auto;
            padding: 0 2rem;
        }

        .offer-header {
            position: relative;
            height: 500px;
            background-size: cover;
            background-position: center;
            border-radius: 20px;
            overflow: hidden;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            margin-bottom: 2rem;
        }

        .header-overlay {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(to bottom, 
                rgba(0,0,0,0.2) 0%,
                rgba(0,0,0,0.4) 50%,
                rgba(0,0,0,0.7) 100%
            );
            display: flex;
            flex-direction: column;
            justify-content: flex-end;
            padding: 2rem;
            color: white;
        }

        .offer-title {
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 1rem;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.5);
        }

        .offer-meta {
            display: flex;
            gap: 1.5rem;
            margin-bottom: 1rem;
        }

        .meta-item {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            background: rgba(255,255,255,0.1);
            padding: 0.5rem 1rem;
            border-radius: 30px;
            backdrop-filter: blur(5px);
        }

        .weather-card {
            position: absolute;
            top: 2rem;
            right: 2rem;
            width: 280px;
            background: rgba(255,255,255,0.2);
            backdrop-filter: blur(10px);
            border-radius: 20px;
            padding: 2rem;
            color: white;
            box-shadow: 0 8px 32px rgba(31, 38, 135, 0.15);
            border: 1px solid rgba(255,255,255,0.3);
            animation: slideIn 0.6s ease-out;
        }

        .weather-temp {
            font-size: 3.5rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
        }

        .weather-description {
            font-size: 1.2rem;
            margin-bottom: 1.5rem;
            text-transform: capitalize;
            text-shadow: 1px 1px 2px rgba(0,0,0,0.3);
        }

        .weather-details {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 1rem;
        }

        .weather-detail {
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 1rem;
            background: rgba(255,255,255,0.1);
            border-radius: 15px;
            transition: all 0.3s ease;
        }

        .weather-detail i {
            font-size: 1.5rem;
            margin-bottom: 0.5rem;
        }

        .weather-detail-value {
            font-size: 1.2rem;
            font-weight: 600;
            margin-bottom: 0.2rem;
        }

        .weather-detail-label {
            font-size: 0.9rem;
            opacity: 0.9;
        }

        @keyframes slideIn {
            from {
                opacity: 0;
                transform: translateX(30px);
            }
            to {
                opacity: 1;
                transform: translateX(0);
            }
        }

        .content-section {
            background: white;
            border-radius: 20px;
            padding: 2rem;
            margin-bottom: 2rem;
            box-shadow: 0 5px 15px rgba(0,0,0,0.05);
        }

        .content-section h3 {
            font-size: 1.8rem;
            margin-bottom: 1.5rem;
            color: #2d3436;
            font-weight: 600;
        }

        .description {
            font-size: 1.1rem;
            line-height: 1.8;
            color: #2d3436;
        }

        .offer-details {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 2rem;
            align-items: center;
        }

        .detail-item {
            display: flex;
            align-items: flex-start;
            gap: 1rem;
            padding: 1.5rem;
            background: #f8f9fa;
            border-radius: 15px;
            transition: all 0.3s ease;
        }

        .detail-item:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.05);
        }

        .detail-item i {
            font-size: 1.5rem;
            color: #00b4db;
            background: #e3f6f9;
            padding: 1rem;
            border-radius: 12px;
        }

        .detail-content {
            flex: 1;
        }

        .detail-label {
            font-size: 0.9rem;
            color: #636e72;
            margin-bottom: 0.5rem;
        }

        .detail-value {
            font-size: 1.1rem;
            font-weight: 600;
            color: #2d3436;
        }

        .booking-button {
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .booking-info {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-bottom: 2rem;
            padding: 1.5rem;
            background: #f8f9fa;
            border-radius: 15px;
        }

        .price-container {
            flex-grow: 1;
        }

        .price {
            font-size: 2.5rem;
            font-weight: 700;
            color: #2d3436;
            margin-bottom: 0.5rem;
        }

        .price-label {
            color: #636e72;
        }

        .btn-reserve {
            padding: 1rem 2rem;
            background: linear-gradient(135deg, #00b4db, #0083b0);
            color: white;
            border-radius: 30px;
            text-decoration: none;
            font-weight: 600;
            transition: all 0.3s ease;
            border: none;
            cursor: pointer;
            box-shadow: 0 4px 15px rgba(0,180,219,0.2);
        }

        .btn-reserve:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(0,180,219,0.3);
            background: linear-gradient(135deg, #0083b0, #00b4db);
        }

        .gallery {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            gap: 1.5rem;
            margin-top: 2rem;
        }

        .gallery-item {
            position: relative;
            padding-bottom: 100%;
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            transition: all 0.3s ease;
        }

        .gallery-item:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.15);
        }

        .gallery-item img {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        @media (max-width: 768px) {
            .offer-container {
                padding: 1rem;
            }

            .offer-header {
                height: 400px;
                border-radius: 15px;
            }

            .weather-card {
                position: relative;
                top: -30px;
                right: auto;
                width: 90%;
                margin: 0 auto 1rem auto;
            }

            .booking-info {
                flex-direction: column;
                text-align: center;
                gap: 1rem;
            }

            .price-container {
                margin-bottom: 1rem;
            }

            .offer-details {
                grid-template-columns: 1fr;
                gap: 1rem;
            }

            .booking-button {
                margin-top: 1rem;
            }

            .detail-item {
                padding: 1rem;
            }
        }
    </style>
{% endblock %}

{% block body %}
    <div class="offer-container">
        <div class="offer-header" style="background-image: url('{{ asset('uploads/images/' ~ offre.image) }}')">
            <div class="header-overlay">
                <h1 class="offer-title">{{ offre.titre }}</h1>
                <div class="offer-meta">
                    <div class="meta-item">
                        <i class="fas fa-calendar-alt"></i>
                        <span>Du {{ offre.dateDebut|date('d/m/Y') }} au {{ offre.dateFin|date('d/m/Y') }}</span>
                    </div>
                    <div class="meta-item">
                        <i class="fas fa-users"></i>
                        <span>{{ offre.placesDisponibles }} places disponibles</span>
                    </div>
                </div>
            </div>

            {% if weather is not null %}
                <div class="weather-card">
                    <div class="weather-temp">{{ weather.temperature|number_format(1) }}°C</div>
                    <div class="weather-description">{{ weather.description }}</div>
                    <div class="weather-details">
                        <div class="weather-detail">
                            <i class="fas fa-tint"></i>
                            <div class="weather-detail-value">{{ weather.humidity }}%</div>
                            <div class="weather-detail-label">Humidité</div>
                        </div>
                        <div class="weather-detail">
                            <i class="fas fa-wind"></i>
                            <div class="weather-detail-value">{{ weather.wind }} km/h</div>
                            <div class="weather-detail-label">Vent</div>
                        </div>
                    </div>
                </div>
            {% endif %}
        </div>

        <div class="content-section">
            <div class="description">
                <h3>Description</h3>
                <p>{{ offre.description }}</p>
            </div>
        </div>

        <div class="content-section">
            <h3>Détails de l'offre</h3>
            <div class="offer-details">
                <div class="detail-item">
                    <i class="fas fa-calendar-alt"></i>
                    <div class="detail-content">
                        <div class="detail-label">Dates du voyage</div>
                        <div class="detail-value">Du {{ offre.dateDebut|date('d/m/Y') }} au {{ offre.dateFin|date('d/m/Y') }}</div>
                    </div>
                </div>
                <div class="detail-item">
                    <i class="fas fa-users"></i>
                    <div class="detail-content">
                        <div class="detail-label">Places disponibles</div>
                        <div class="detail-value">{{ offre.placesDisponibles }} places</div>
                    </div>
                </div>
                <div class="detail-item">
                    <i class="fas fa-tag"></i>
                    <div class="detail-content">
                        <div class="detail-label">Prix par personne</div>
                        <div class="detail-value">{{ offre.prix }}€</div>
                    </div>
                </div>
                <div class="booking-button">
                    {% if offre.placesDisponibles > 0 %}
                        <a href="http://127.0.0.1:8000/reservation/new/{{ offre.id }}" class="btn-reserve">
                            Réserver maintenant
                        </a>
                    {% else %}
                        <button class="btn-reserve disabled" disabled>Complet</button>
                    {% endif %}
                </div>
            </div>
        </div>

        {% if offre.photos|length > 0 %}
        <div class="content-section">
            <h3>Galerie photos</h3>
            <div class="gallery">
                {% for photo in offre.photos %}
                    <div class="gallery-item">
                        <img src="{{ asset('uploads/images/' ~ photo.filename) }}" alt="{{ offre.titre }}">
                    </div>
                {% endfor %}
            </div>
        </div>
        {% endif %}
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        function updateWeather() {
            fetch('/offre/{{ offre.id }}/weather')
                .then(response => response.json())
                .then(data => {
                    const weather = data.weather;
                    // Mise à jour des informations météo avec animation
                    const tempElement = document.querySelector('.weather-temp');
                    const currentTemp = parseInt(tempElement.textContent);
                    const newTemp = weather.temperature;
                    
                    // Animation de la température
                    if (currentTemp !== newTemp) {
                        tempElement.style.transform = 'scale(1.1)';
                        setTimeout(() => {
                            tempElement.textContent = `${newTemp}°C`;
                            tempElement.style.transform = 'scale(1)';
                        }, 300);
                    }

                    document.querySelector('.weather-description').textContent = weather.description;
                    
                    // Animation des détails
                    const details = document.querySelectorAll('.weather-detail');
                    details.forEach((detail, index) => {
                        detail.style.transform = 'scale(0.95)';
                        setTimeout(() => {
                            if (index === 0) {
                                detail.querySelector('.weather-detail-value').textContent = `${weather.humidity}%`;
                            } else {
                                detail.querySelector('.weather-detail-value').textContent = `${weather.wind} km/h`;
                            }
                            detail.style.transform = 'scale(1)';
                        }, 200 * (index + 1));
                    });
                })
                .catch(error => console.error('Erreur lors de la mise à jour de la météo:', error));
        }

        // Mettre à jour la météo toutes les 5 minutes
        setInterval(updateWeather, 300000);

        // Première mise à jour après 1 seconde
        setTimeout(updateWeather, 1000);
    </script>
{% endblock %}
