{% extends 'base.html.twig' %}

{% block title %}Notification Settings{% endblock %}

{% block body %}
<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Notification Settings</h3>
                        </div>
                        <div class="card-body">
                            <form method="post" action="{{ path('user_notifications_settings') }}">
                                <div class="mb-4">
                                    <h5>Email Notifications</h5>
                                    <div class="form-check mb-2">
                                        <input type="checkbox" class="form-check-input" id="emailBookings" name="notifications[email][bookings]" {% if user.notificationPreferences.email.bookings ?? false %}checked{% endif %}>
                                        <label class="form-check-label" for="emailBookings">Booking updates</label>
                                    </div>
                                    <div class="form-check mb-2">
                                        <input type="checkbox" class="form-check-input" id="emailOffers" name="notifications[email][offers]" {% if user.notificationPreferences.email.offers ?? false %}checked{% endif %}>
                                        <label class="form-check-label" for="emailOffers">New offers</label>
                                    </div>
                                </div>

                                <div class="mb-4">
                                    <h5>Push Notifications</h5>
                                    <div class="form-check mb-2">
                                        <input type="checkbox" class="form-check-input" id="pushBookings" name="notifications[push][bookings]" {% if user.notificationPreferences.push.bookings ?? false %}checked{% endif %}>
                                        <label class="form-check-label" for="pushBookings">Booking updates</label>
                                    </div>
                                    <div class="form-check mb-2">
                                        <input type="checkbox" class="form-check-input" id="pushOffers" name="notifications[push][offers]" {% if user.notificationPreferences.push.offers ?? false %}checked{% endif %}>
                                        <label class="form-check-label" for="pushOffers">New offers</label>
                                    </div>
                                </div>

                                <button type="submit" class="btn btn-primary">Save Settings</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}