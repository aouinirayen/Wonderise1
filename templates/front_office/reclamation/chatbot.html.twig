{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .chat-container {
            max-width: 600px;
            margin: auto;
            margin-top: 50px;
            background: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        }

        #chatbox {
            height: 400px;
            overflow-y: auto;
            display: flex;
            flex-direction: column;
            border: 1px solid #ddd;
            border-radius: 8px;
            padding: 15px;
            background-color: #fff;
        }

        .chat-message {
            max-width: 75%;
            padding: 12px;
            margin: 5px;
            border-radius: 20px;
            display: inline-block;
            word-wrap: break-word;
            font-size: 14px;
        }

        .user-message {
            align-self: flex-end;
            background-color: #007bff;
            color: white;
            text-align: right;
        }

        .bot-message {
            align-self: flex-start;
            background-color: #e9ecef;
            color: black;
        }

        .chat-spinner {
            text-align: center;
            display: none;
        }

        .input-group input {
            border-radius: 20px;
        }

        .btn-send {
            border-radius: 20px;
        }
    </style>
{% endblock %}

{% block body %}
<div class="chat-container">
    <h4 class="text-center text-primary">Chatbot Intelligent ü§ñ</h4>
    
    <div id="chatbox" class="mb-3">
        <!-- Messages du chat appara√Ætront ici -->
    </div>

    <div class="chat-spinner">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Chargement...</span>
        </div>
    </div>

    <div class="input-group mt-3">
        <input type="text" id="user-input" class="form-control" placeholder="Posez une question..." autofocus>
        <button onclick="sendMessage()" class="btn btn-primary btn-send">Envoyer</button>
    </div>
</div>

<script>
    async function sendMessage() {
        let inputField = document.getElementById("user-input");
        let chatbox = document.getElementById("chatbox");
        let spinner = document.querySelector(".chat-spinner");
        let userMessage = inputField.value.trim();

        if (userMessage === "") return;

        // Ajouter le message utilisateur dans le chat
        let userDiv = document.createElement("div");
        userDiv.className = "chat-message user-message";
        userDiv.innerText = userMessage;
        chatbox.appendChild(userDiv);
        chatbox.scrollTop = chatbox.scrollHeight;

        // Afficher le spinner
        spinner.style.display = "block";

        // R√©initialiser le champ de saisie
        inputField.value = "";

        try {
            let response = await fetch("https://127.0.0.1:8000/reclamation/chatbot/api", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({ message: userMessage })
            });

            if (!response.ok) {
                throw new Error("Erreur serveur " + response.status);
            }

            let data = await response.json();

            // Afficher la r√©ponse du bot
            let botDiv = document.createElement("div");
            botDiv.className = "chat-message bot-message";
            botDiv.innerText = data.message;
            chatbox.appendChild(botDiv);
        } catch (error) {
            console.error("Erreur :", error);
            let errorDiv = document.createElement("div");
            errorDiv.className = "chat-message bot-message text-danger";
            errorDiv.innerText = "‚ùå Une erreur est survenue.";
            chatbox.appendChild(errorDiv);
        } finally {
            // Cacher le spinner
            spinner.style.display = "none";
            chatbox.scrollTop = chatbox.scrollHeight;
        }
    }
</script>
{% endblock %}
