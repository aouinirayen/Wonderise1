<form method="post" action="{{ path('app_experience_delete', {'id': experience.id}) }}" onsubmit="return confirm('Are you sure you want to delete this experience?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ experience.id) }}">
    <button class="btn btn-outline-danger">
        <i class="bi bi-trash"></i> Delete
    </button>
</form>