<style>
    .form-container {
        max-width: 800px;
        margin: 2rem auto;
        padding: 2rem;
        background: #fff;
        border-radius: 10px;
        box-shadow: 0 2px 15px rgba(0, 0, 0, 0.1);
    }

    .form-title {
        color: #2c3e50;
        margin-bottom: 2rem;
        text-align: center;
        font-weight: 600;
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-label {
        font-weight: 500;
        color: #34495e;
        margin-bottom: 0.5rem;
        display: block;
    }

    .form-control {
        border: 1px solid #dce4ec;
        border-radius: 6px;
        padding: 0.75rem;
        width: 100%;
        transition: border-color 0.15s ease-in-out;
    }

    .form-control:focus {
        border-color: #3498db;
        box-shadow: 0 0 0 0.2rem rgba(52, 152, 219, 0.25);
    }

    .form-error {
        color: #e74c3c;
        font-size: 0.875rem;
        margin-top: 0.25rem;
    }

    .alert {
        padding: 1rem;
        margin-bottom: 1rem;
        border-radius: 6px;
        border: 1px solid transparent;
    }

    .alert-danger {
        background-color: #fdf7f7;
        border-color: #f5c6cb;
        color: #721c24;
    }

    .alert-success {
        background-color: #d4edda;
        border-color: #c3e6cb;
        color: #155724;
    }

    .alert-warning {
        background-color: #fff3cd;
        border-color: #ffeeba;
        color: #856404;
    }

    .btn {
        padding: 0.75rem 1.5rem;
        border-radius: 6px;
        font-weight: 500;
        transition: all 0.15s ease-in-out;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }

    .btn-primary {
        background-color: #3498db;
        border-color: #3498db;
        color: white;
    }

    .btn-primary:hover {
        background-color: #2980b9;
        border-color: #2980b9;
    }

    .btn-secondary {
        background-color: #95a5a6;
        border-color: #95a5a6;
        color: white;
    }

    .btn-secondary:hover {
        background-color: #7f8c8d;
        border-color: #7f8c8d;
    }

    .voice-record-btn {
        background-color: #2ecc71;
        color: white;
        border: none;
        padding: 0.5rem 1rem;
        border-radius: 6px;
        cursor: pointer;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        transition: all 0.15s ease-in-out;
        margin-top: 0.5rem;
    }

    .voice-record-btn:hover {
        background-color: #27ae60;
    }

    .voice-record-btn i {
        font-size: 1.1rem;
    }

    .voice-record-status {
        margin-top: 0.5rem;
        font-size: 0.875rem;
        color: #7f8c8d;
    }

    .required-field::after {
        content: '*';
        color: #e74c3c;
        margin-left: 4px;
    }

    .form-footer {
        margin-top: 2rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .text-muted {
        color: #95a5a6;
        font-size: 0.875rem;
        margin-top: 0.25rem;
    }
</style>

<div class="form-container">
    <h2 class="form-title">{{ title|default('Share Your Experience') }}</h2>

    {{ form_start(form) }}
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        {% if not form.vars.valid %}
            <div class="alert alert-danger">
                {{ form_errors(form) }}
            </div>
        {% endif %}

        <div class="form-group">
            {{ form_label(form.titre, 'Title', {'label_attr': {'class': 'form-label required-field'}}) }}
            {{ form_widget(form.titre, {
                'attr': {
                    'class': 'form-control',
                    'placeholder': 'Give your experience a captivating title'
                }
            }) }}
            {{ form_errors(form.titre, {'attr': {'class': 'form-error'}}) }}
            <small class="text-muted">Minimum 10 characters</small>
        </div>

        <div class="form-group">
            {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label required-field'}}) }}
            <div class="description-container">
                {{ form_widget(form.description, {
                    'attr': {
                        'class': 'form-control',
                        'rows': '5',
                        'placeholder': 'Share your story in detail'
                    }
                }) }}
                <button type="button" class="voice-record-btn" id="descriptionRecordBtn">
                    <i class="fas fa-microphone"></i> Record Your Story
                </button>
                <div class="voice-record-status" id="descriptionRecordStatus"></div>
            </div>
            {{ form_errors(form.description, {'attr': {'class': 'form-error'}}) }}
            <small class="text-muted">Minimum 10 characters</small>
        </div>

        <div class="form-group">
            {{ form_label(form.url, 'Image URL', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.url, {
                'attr': {
                    'class': 'form-control',
                    'placeholder': 'Add an image URL to enhance your experience'
                }
            }) }}
            {{ form_errors(form.url, {'attr': {'class': 'form-error'}}) }}
            <small class="text-muted">Optional: Add an image to illustrate your experience</small>
        </div>

        <div class="form-group">
            {{ form_label(form.lieu, 'Location', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.lieu, {
                'attr': {
                    'class': 'form-control',
                    'placeholder': 'Where did this experience take place?'
                }
            }) }}
            {{ form_errors(form.lieu, {'attr': {'class': 'form-error'}}) }}
            <small class="text-muted">Adding a location will show air quality information</small>
        </div>

        <div class="form-group">
            {{ form_label(form.categorie, 'Category', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.categorie, {
                'attr': {
                    'class': 'form-control',
                    'placeholder': 'What category best describes your experience?'
                }
            }) }}
            {{ form_errors(form.categorie, {'attr': {'class': 'form-error'}}) }}
        </div>

        <div class="form-footer">
            <a href="{{ path('app_experience_index') }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save"></i> {{ button_label|default('Save Experience') }}
            </button>
        </div>

    {{ form_end(form) }}
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const descriptionTextArea = document.querySelector('#experience_description');
        const descriptionRecordBtn = document.querySelector('#descriptionRecordBtn');
        const descriptionStatusElement = document.querySelector('#descriptionRecordStatus');
        
        if (descriptionTextArea && descriptionRecordBtn && descriptionStatusElement) {
            new VoiceRecorder(descriptionTextArea, descriptionRecordBtn, descriptionStatusElement);
        }
    });
</script>
