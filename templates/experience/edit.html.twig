{% extends 'base.html.twig' %}

{% block title %}{{ 'Modifier une experience'|trans }}{% endblock %}

{% block body %}
    <div class="container py-5">
        <div class="card shadow-sm">
            <div class="card-body">
                <h2 class="card-title text-center mb-4">{{ 'Modifier une experience'|trans }}</h2>

                {{ include('experience/_form.html.twig', {'button_label': 'Update'|trans}) }}

                <div class="d-flex justify-content-between mt-4">
                    <a href="{{ path('app_experience_index') }}" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> {{ 'Back to list'|trans }}
                    </a>

                    {{ include('experience/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
