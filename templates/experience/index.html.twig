{% extends 'base.html.twig' %}

{% block title %}Countries{% endblock %}

{% block stylesheets %}
    <style>
        .blog-item {
            display: flex;
            flex-direction: row;
            align-items: stretch;
            width: 50%;
        }
        .blog-img {
            flex: 1;
            width: 50%;
        }
        .blog-content {
            flex: 2;
            display: flex;
            flex-direction: column;
            justify-content: center;
            width: 50%;
        }
    </style>
{% endblock %}

{% block body %}
  <!-- Countries Start -->
    <div class="container-fluid experience py-5">
     <div class="container py-5">
            <div class="mx-auto text-center mb-5" style="max-width: 900px;">
                <h5 class="section-title px-3">Experiences</h5>
                <h1 class="mb-4">Explore Our Experiences</h1>
                <p class="mb-0">Discover the beauty and diversity of countries around the world. From stunning landscapes to rich cultures, there's something for everyone to explore.</p>
            </div>
            <div class="d-flex justify-content-end mb-3">
                <a href="{{ path('app_experience_new') }}" class="btn btn-primary">Create new post</a>
            </div>

            <div class="row g-4 justify-content-center">
                {% for experience in experiences %}
                    <div class="col-md-12 d-flex">
                        <div class="blog-item hover-card w-100">
                            <div class="blog-img">
                                <div class="blog-img-inner">
                                    <img class="img-fluid w-100 rounded-top" src="{{ experience.getURl() }}" alt="{{ experience.getTitre() }}" style="height: 200px; object-fit: cover;">
                                    <div class="blog-icon">
                                        <a href="{{ path('app_experience_show', {'id': experience.getTitre()}) }}" class="my-auto">
                                            <i class="fas fa-link fa-2x text-white"></i>
                                        </a>
                                        <a href="{{ path('app_experience_edit', {'id': experience.getId()}) }}" class="btn btn-secondary rounded-pill py-2 px-4">Update</a>
                                        <form method="post" action="{{ path('app_experience_delete', {'id': experience.getId()}) }}" style="display:inline;">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ experience.getId()) }}">
                                            <button class="btn btn-danger rounded-pill py-2 px-4">Delete</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                            <div class="blog-content border border-top-0 rounded-bottom p-4">
                                <p class="mb-3">Experiecne: {{ experience.getId() }}</p>
                                <a href="{{ path('app_experience_show', {'id': experience.getId()}) }}" class="h4">{{ experience.getTitre() }}</a>
                                <p class="my-3">{{ experience.getDescription() }}</p>
                                <a href="{{ path('app_experience_show', {'id': experience.getId()}) }}" class="btn btn-primary rounded-pill py-2 px-4">View Details</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
    <!-- Experiences End -->
{% endblock %}
