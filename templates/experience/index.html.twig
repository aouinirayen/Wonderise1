{% extends 'base.html.twig' %}

{% block title %}Blog - Experiences{% endblock %}

{% block stylesheets %}
    <style>
        .blog-card {
            background: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            transition: transform 0.3s ease;
        }

        .blog-card:hover {
            transform: translateY(-5px);
        }

        .blog-img img {
            width: 100%;
            height: 250px;
            object-fit: cover;
        }

        .blog-content {
            padding: 20px;
        }

        .blog-content h4 {
            font-size: 1.5rem;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .blog-meta {
            font-size: 0.9rem;
            color: #777;
            margin-bottom: 10px;
        }

        .blog-description {
            font-size: 1rem;
            color: #555;
            margin-bottom: 15px;
        }

        .btn-read-more {
            text-decoration: none;
            color: white;
            background-color: #007bff;
            padding: 10px 20px;
            border-radius: 5px;
            display: inline-block;
        }

        .btn-read-more:hover {
            background-color: #0056b3;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container py-5">
        <div class="text-center mb-5">
            <h1>üåç Explore Our Experiences</h1>
            <p>D√©couvrez des aventures et des cultures fascinantes √† travers le monde.</p>
            <a href="{{ path('app_experience_new') }}" class="btn btn-primary">‚ûï Nouvelle publication</a>
        </div>

        <div class="row">
            {% for experience in experiences %}
                <div class="col-md-6 mb-4">
                    <div class="blog-card">
                        <!-- Image -->
                        <div class="blog-img">
                            <img src="{{ experience.getURl() ?: 'default.jpg' }}" alt="{{ experience.getTitre() }}">
                        </div>

                        <!-- Contenu -->
                        <div class="blog-content">
                            <h4>{{ experience.getTitre() }}</h4>
                            <p class="blog-meta">üïí Publi√© le {{ experience.getDate()|date('d/m/Y') }}</p>
                            <p class="blog-description">{{ experience.getDescription()|length > 100 ? experience.getDescription()|slice(0, 100) ~ '...' : experience.getDescription() }}</p>
                            <a href="{{ path('app_experience_show', {'id': experience.getId()}) }}" class="btn-read-more">üìñ Lire la suite</a>
                        </div>
                    </div>
                </div>
            {% else %}
                <p class="text-center">Aucune exp√©rience publi√©e pour le moment.</p>
            {% endfor %}
        </div>
    </div>
{% endblock %}