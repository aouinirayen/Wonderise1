{% for monument in monuments %}
    <div class="col-lg-4 col-md-6 item-container">
        <div class="card hover-card">
            <img src="{{ asset('uploads/images/' ~ monument.img) }}" class="card-img-top" alt="{{ monument.name }}" style="height: 200px; object-fit: cover;">
            <div class="card-body">
                <h5 class="card-title">{{ monument.name }}</h5>
                <p class="card-text">{{ monument.description }}</p>
                <a href="{{ path('app_monument_show', {'id': monument.id}) }}" class="btn btn-primary">View Details</a>
            </div>
        </div>
    </div>
{% endfor %}
