{% for art in arts %}
    <div class="col-lg-4 col-md-6 item-container">
        <div class="card hover-card">
            <img src="{{ asset('uploads/images/' ~ art.img) }}" class="card-img-top" alt="{{ art.name }}" style="height: 200px; object-fit: cover;">
            <div class="card-body">
                <h5 class="card-title">{{ art.name }}</h5>
                <p class="card-text">{{ art.description }}</p>
                <a href="{{ path('app_art_show', {'id': art.id}) }}" class="btn btn-primary">View Details</a>
            </div>
        </div>
    </div>
{% endfor %}
