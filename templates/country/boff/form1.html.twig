{% extends 'layout.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4 text-center">{{ title }}</h1>

        {{ form_start(form, {'attr': {'novalidate': 'novalidate' ,'enctype': 'multipart/form-data', 'data-turbo': 'false'}}) }}
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <div class="form-group mb-3">
                            <label for="{{ form.name.vars.id }}">{{ form_label(form.name) }}</label>
                            {{ form_widget(form.name, {'attr': {'class': 'form-control'}, 'required': false}) }}
                            <div class="text-danger">
                                {{ form_errors(form.name) }}
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <label for="{{ form.img.vars.id }}">{{ form_label(form.img) }}</label>
                            {{ form_widget(form.img, {'attr': {'class': 'form-control'}, 'required': false}) }}
                            <div class="text-danger">
                                {{ form_errors(form.img) }}
                            </div>
                        </div>
                        <div class="form-group mb-3">
                            <label for="{{ form.description.vars.id }}">{{ form_label(form.description) }}</label>
                            {{ form_widget(form.description, {'attr': {'class': 'form-control'}, 'required': false}) }}
                            <div class="text-danger">
                                {{ form_errors(form.description) }}
                            </div>
                        </div>
                        <div class="form-group mb-3">
                            <label for="{{ form.currency.vars.id }}">{{ form_label(form.currency) }}</label>
                            {{ form_widget(form.currency, {'attr': {'class': 'form-control'}, 'required': false}) }}
                            <div class="text-danger">
                                {{ form_errors(form.currency) }}
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <label for="{{ form.isoCode.vars.id }}">{{ form_label(form.isoCode) }}</label>
                            {{ form_widget(form.isoCode, {'attr': {'class': 'form-control'}, 'required': false}) }}
                            <div class="text-danger">
                                {{ form_errors(form.isoCode) }}
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <label for="{{ form.callingCode.vars.id }}">{{ form_label(form.callingCode) }}</label>
                            {{ form_widget(form.callingCode, {'attr': {'class': 'form-control'}, 'required': false}) }}
                            <div class="text-danger">
                                {{ form_errors(form.callingCode) }}
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <label for="{{ form.climate.vars.id }}">{{ form_label(form.climate) }}</label>
                            {{ form_widget(form.climate, {'attr': {'class': 'form-control'}, 'required': false}) }}
                            <div class="text-danger">
                                {{ form_errors(form.climate) }}
                            </div>
                        </div>

                        <div class="d-grid">
                            <button class="btn btn-primary btn-lg">{{ button_label|default('Submit') }}</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}

