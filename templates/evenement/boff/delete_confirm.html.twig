{% extends 'layout.html.twig' %}

{% block title %}Confirmer la suppression{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <div class="card">
                    <div class="card-body text-center">
                        <h2 class="card-title">Confirmer la suppression</h2>
                        <p class="card-text">
                            Êtes-vous sûr de vouloir supprimer l'événement "{{ evenement.nom }}" ?
                            <br>
                            Cette action est irréversible.
                        </p>
                        <div class="mt-4">
                            <form method="post" action="{{ path('app_evenement_delete', {'id': evenement.id}) }}" style="display: inline-block;">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ evenement.id) }}">
                                <button type="submit" class="btn btn-danger">
                                    <i class="fas fa-trash"></i> Oui, supprimer
                                </button>
                            </form>
                            <a href="{{ path('app_evenement_index1') }}" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Non, annuler
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
