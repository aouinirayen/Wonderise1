{% extends 'base.html.twig' %}

{% block title %}Art Details{% endblock %}

{% block body %}
<div class="container py-5">
    <h1>{{ art.name }}</h1>
    {% if art.img %}
        <img src="{{ asset('uploads/arts/' ~ art.img) }}" alt="{{ art.name }}" class="img-fluid">
    {% else %}
        <p>No image available</p>
    {% endif %}
    <p>{{ art.description }}</p>
    <h2>Country</h2>
    <p>{{ art.country.name }}</p>
    <a href="{{ path('app_art_edit', {'id': art.id}) }}" class="btn btn-primary">Edit</a>
    <form method="post" action="{{ path('app_art_delete', {'id': art.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ art.id) }}">
        <button class="btn btn-danger">Delete</button>
    </form>
</div>
{% endblock %}