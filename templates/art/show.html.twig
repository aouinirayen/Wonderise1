{% extends 'base.html.twig' %}

{% block title %}{{ art.name }} - Art Details{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
<h1 class="card-title mb-0 text-white">{{ art.name }}</h1>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    {% if art.img %}
             <img class="img-fluid w-100 rounded-top" src="{{ asset('uploads/images/' ~ art.img) }}" alt="{{ art.name }}" style="height: 200px; object-fit: cover;">
                    {% else %}
                        <div class="alert alert-warning text-center">
                            <p class="mb-0">No image available</p>
                        </div>
                    {% endif %}
                </div>
                <div class="col-md-6">
                    <p class="lead">{{ art.description }}</p>

                    <div class="mt-4">
                        <h2 class="h4 text-secondary">Date of Art</h2>
                        <p class="text-muted">{{ art.date ? art.date|date('Y-m-d') : 'Unknown' }}</p>
                    </div>

                    <div class="mt-4">
                        <h2 class="h4 text-secondary">Type</h2>
                        <p class="text-muted">{{ art.type }}</p>
                    </div>

                    <div class="mt-4">
                        <h2 class="h4 text-secondary">Country</h2>
                        <p class="text-muted">{{ art.country.name }}</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="card-footer bg-light">
           
        </div>
    </div>
</div>
{% endblock %}
